% Java style for highlighting
\newcommand\javastyle{\lstset{
   language=JavaScript,
   backgroundcolor=\color{lightgray},
   extendedchars=true,
   basicstyle=\footnotesize\ttfamily,
   showstringspaces=false,
   showspaces=false,
   numbers=left,
   numberstyle=\footnotesize,
   numbersep=9pt,
   tabsize=2,
   breaklines=true,
   showtabs=false,
   captionpos=b
}}

% Java environment
\lstnewenvironment{js}[1][]
{
\javastyle
\lstset{#1}
}
{}

